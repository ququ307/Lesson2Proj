<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10028.lesson2proj.MainActivity">
<TextView
    android:id="@+id/btn_center"
    android:layout_centerInParent="true"
    android:layout_width="100dp"
    android:text="世界中心"
    android:gravity="center"
    android:layout_height="100dp"
    android:background="#d81c15"
   />

    <Button
        android:id="@+id/button1"
        android:layout_toLeftOf="@id/btn_center"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="西方"
        android:background="#53d118"

        />
    <Button
        android:id="@+id/button2"
        android:layout_above="@id/btn_center"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="北方"
        android:background="#c4a819"
        />
    <Button
        android:id="@+id/button3"
        android:layout_toRightOf="@id/btn_center"
        android:layout_centerVertical="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="东方"
        android:background="#3344ff"
        />
    <Button
        android:id="@+id/button4"
        android:layout_below="@id/btn_center"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="南方"
        android:background="#710e80"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >
        <TextView
            android:id="@+id/ccc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="相信自己是最棒的 !"
            android:gravity="center"
           android:textSize="30dp"
            android:textColor="#d42e1f"/>
    </LinearLayout>

    </RelativeLayout>

