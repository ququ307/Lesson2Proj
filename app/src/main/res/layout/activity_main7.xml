<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a10028.lesson2proj.Main7Activity">
    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.18"
        tools:layout_editor_absoluteY="92dp"
        tools:layout_editor_absoluteX="0dp"/>


    <ImageView
        android:layout_width="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="0dp"
        android:contentDescription="2dp"
        android:id="@+id/imageView"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="50dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="#ddf3f3"
            android:gravity="center"
            android:text="用户名"/>


        <view
            android:id="@+id/line1"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@id/tv_username"
            android:background="#c11033"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/line1"
            android:layout_toEndOf="@+id/line1"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"/>

    </RelativeLayout>




    <RelativeLayout

        android:layout_width="367dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteY="230dp"
        tools:layout_editor_absoluteX="9dp"
        android:id="@+id/relativeLayout2"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/guideline"
        android:layout_toEndOf="@+id/guideline"
        android:layout_marginTop="148dp">


        <TextView
            android:id="@+id/tv_password"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:background="#ddf3f3"
            android:gravity="center"
            android:text="密码"
            tools:layout_editor_absoluteY="233dp"
            tools:layout_editor_absoluteX="8dp"/>
        <view
            android:id="@+id/line2"
            android:layout_toRightOf="@id/tv_password"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="#c11033"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="347dp"
            tools:layout_editor_absoluteX="102dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/line2"
            android:layout_toEndOf="@+id/line2"/>

        />
    </RelativeLayout>

</RelativeLayout>
